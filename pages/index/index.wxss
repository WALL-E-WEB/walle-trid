/**index.wxss**/
.card{
    width: 100%;
    background:linear-gradient(#dfdfdf,#fff);
    padding:20px 20px;
    padding-right:20px;
    padding-bottom:20px;
    padding-left:20px;
    overflow: hidden;
  
}
.cardContent{
  width: 100%;
  height: 200px;
  border-radius: 10px;
  overflow: hidden;
  position:relative;
}
.headimg{
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  width: 50%;
  height: 100%;
  /* background-color: skyblue; */
  clip-path: polygon(0% 0%, 100% 0%, 80% 100%, 0% 100%);
}
.img{
    width: 100%;
    border: none;
    padding: 0;
}
/* 卡片右边 */
.cardmsg{
  position: absolute;
  right: 0;
  top: 0;
  width: 68%;
  height: 200%;
  background-color: #fff;
  clip-path: polygon(30% 0%, 100% 0%, 100% 100%, 0 100%);
  text-align: right;
  font-size: 14px;
  
}
.companyname{
  width: 100%;
  line-height: 40px;
  padding-right: 10px;
}
.cardname{
  text-align: left;
  padding-left: 36%;
  padding-top: 10px;
  padding-bottom: 16px;
  background-color: #ccc;
}
.nametext{
  font-size: 18px;
  font-weight: 700;
}
.post{
  font-size: 14px;
}

.contact{
  padding-right: 10px;
}